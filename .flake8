# 代码质量检查配置文件

# Flake8配置
[flake8]
# 最大行长度
max-line-length = 100
# 忽略的错误
ignore = E203, W503
# 排除的目录
exclude = .git,__pycache__,docs/source/conf.py,old,build,dist,*.pyc
# 选择的代码风格指南
select = B,C,E,F,W,T4,B9

# Pylint配置
[MASTER]
# 忽略的模块
ignore = numpy,torch,pandas
# 排除的目录
exclude = .git,__pycache__,docs/source/conf.py,old,build,dist
# 最大行长度
max-line-length = 100
# 启用的检查器
enable = unused-import,unused-variable,unused-argument,missing-docstring,too-many-lines

[MESSAGES CONTROL]
# 忽略的消息
disable = C0111,C0330,C0411,C0103

# Black格式化工具配置
[tool.black]
line-length = 100
target-version = ['py38']
include = \.pyi?$